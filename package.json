{
  "name": "@rudderstack/rudder-sdk-react-native-monorepo",
  "version": "2.6.0",
  "description": "Rudder React Native SDK monorepo",
  "keywords": [
    "react-native",
    "rudder"
  ],
  "author": "RudderStack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rudderlabs/rudder-sdk-react-native.git"
  },
  "bugs": {
    "url": "https://github.com/rudderlabs/rudder-sdk-react-native/issues"
  },
  "homepage": "https://github.com/rudderlabs/rudder-sdk-react-native#readme",
  "scripts": {
    "setup": "gem install xcpretty && npm i && nx sync-deps example && nx ensure-symlink example && cd apps/example/ios && pod repo update && pod install",
    "setup:ci": "npm i && nx sync-deps example && nx ensure-symlink example",
    "start": "nx serve",
    "bundle:ci": "nx bundle-android example && nx bundle-ios example",
    "run:android": "nx run-android example",
    "run:ios": "nx run-ios example",
    "run:ios:m1": "arch -x86_64 nx run-ios example",
    "build": "nx build",
    "build:android": "nx build-android example",
    "build:ios": "nx build-ios example",
    "build:ios:ci": "nx build-ios-ci example",
    "build:ios:m1": "arch -x86_64 nx build-ios example",
    "test": "nx run-many --target=test --parallel=1 && ./node_modules/.bin/lcov-result-merger '**/coverage/lcov.info' 'merged-lcov.info'",
    "test:ci": "nx run-many --target=test --parallel=1 --configuration=ci && ./node_modules/.bin/lcov-result-merger '**/coverage/lcov.info' 'merged-lcov.info'",
    "clean": "rm -rf node_modules/.cache && nx reset && rm -rf reports && rm -rf dist",
    "check:lint": "nx run-many --target=lint --parallel=1",
    "check:lint:ci": "nx run-many --target=lint --parallel=1 --configuration=ci",
    "check:circular": "madge --circular --extensions ts ./libs || exit 0",
    "check:security": "npm audit --recursive --audit-level=high",
    "format": "prettier --write .",
    "lint:fix": "nx lint --configuration=fix",
    "prepare": "husky install",
    "pre-commit": "npm run test && npx lint-staged",
    "commit-msg": "commitlint --edit",
    "commit": "git-cz",
    "bump-version:monorepo": "npm version minor --git-tag-version false",
    "release": "nx affected --base=origin/master --target=version --parallel=1 --skipCommitTypes=docs,ci,chore",
    "release:github": "nx affected --target=github --parallel=1 --exclude=example",
    "deploy:npm": "nx affected --target=deploy --parallel=1 --exclude=example"
  },
  "private": true,
  "dependencies": {
    "@babel/runtime": "7.20.7",
    "@react-navigation/native": "6.1.2",
    "@react-navigation/native-stack": "6.9.8",
    "@rudderstack/rudder-integration-amplitude-react-native": "file:libs/rudder-integration-amplitude-react-native",
    "@rudderstack/rudder-integration-appcenter-react-native": "file:libs/rudder-integration-appcenter-react-native",
    "@rudderstack/rudder-integration-appsflyer-react-native": "file:libs/rudder-integration-appsflyer-react-native",
    "@rudderstack/rudder-integration-braze-react-native": "file:libs/rudder-integration-braze-react-native",
    "@rudderstack/rudder-integration-clevertap-react-native": "file:libs/rudder-integration-clevertap-react-native",
    "@rudderstack/rudder-integration-firebase-react-native": "file:libs/rudder-integration-firebase-react-native",
    "@rudderstack/rudder-integration-moengage-react-native": "file:libs/rudder-integration-moengage-react-native",
    "@rudderstack/rudder-integration-singular-react-native": "file:libs/rudder-integration-singular-react-native",
    "@rudderstack/rudder-sdk-react-native": "file:libs/sdk",
    "async-lock": "1.4.0",
    "core-js": "3.27.1",
    "react": "18.1.0",
    "react-native": "0.70.6",
    "react-native-safe-area-context": "3.4.1",
    "react-native-screens": "3.18.2",
    "tslib": "2.4.1"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-react": "7.18.6",
    "@commitlint/cli": "17.4.1",
    "@commitlint/config-conventional": "17.4.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "8.0.0",
    "@jscutlery/semver": "2.29.3",
    "@nrwl/cli": "15.4.5",
    "@nrwl/detox": "15.4.5",
    "@nrwl/eslint-plugin-nx": "15.4.5",
    "@nrwl/jest": "15.4.5",
    "@nrwl/linter": "15.4.5",
    "@nrwl/react-native": "15.4.5",
    "@nrwl/web": "15.4.5",
    "@nrwl/workspace": "15.4.5",
    "@react-native-async-storage/async-storage": "1.17.11",
    "@react-native-community/cli": "9.3.2",
    "@react-native-community/cli-platform-android": "9.3.1",
    "@react-native-community/cli-platform-ios": "9.3.0",
    "@rnx-kit/metro-resolver-symlinks": "0.1.23",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/jest-native": "5.4.1",
    "@testing-library/react-native": "11.5.0",
    "@types/async-lock": "1.3.0",
    "@types/jest": "29.2.5",
    "@types/node": "16.11.7",
    "@types/react": "18.0.26",
    "@types/react-native": "0.70.7",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "babel-jest": "29.3.1",
    "commitizen": "4.2.6",
    "commitlint": "17.4.1",
    "conventional-changelog-cli": "2.2.2",
    "conventional-github-releaser": "3.1.5",
    "detox": "20.0.3",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.7.0",
    "eslint-plugin-react": "7.32.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "glob": "8.0.3",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "jest-circus": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "jest-react-native": "18.0.0",
    "jest-sonar": "0.2.15",
    "lcov-result-merger": "4.0.0",
    "lint-staged": "13.1.0",
    "madge": "5.0.1",
    "metro": "0.74.0",
    "metro-babel-register": "0.74.0",
    "metro-react-native-babel-preset": "0.74.0",
    "metro-react-native-babel-transformer": "0.74.0",
    "metro-resolver": "0.74.0",
    "ngx-deploy-npm": "^4.3.10",
    "nx": "15.4.5",
    "prettier": "2.8.2",
    "react-native-config": "1.4.11",
    "react-native-dotenv": "3.4.7",
    "react-native-svg": "13.7.0",
    "react-native-svg-transformer": "1.0.0",
    "react-test-renderer": "18.1.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "~4.8.2"
  },
  "overrides": {
    "debug": "4.3.4",
    "dot-prop": "5.3.0",
    "jest": "29.3.1",
    "http-cache-semantics": "4.1.1",
    "semver-regex": "3.1.4",
    "shell-quote": "1.7.3",
    "trim-newlines": "3.0.1",
    "json5": "2.2.3",
    "unset-value": "2.0.1",
    "@nrwl/devkit": "15.4.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{json,js,md,ts,tsx}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "jiraMode": false,
      "jiraOptional": true,
      "skipScope": false,
      "scopes": [
        "rudder-integration-amplitude-react-native",
        "rudder-integration-appcenter-react-native",
        "rudder-integration-appsflyer-react-native",
        "rudder-integration-braze-react-native",
        "rudder-integration-clevertap-react-native",
        "rudder-integration-firebase-react-native",
        "rudder-integration-moengage-react-native",
        "rudder-integration-singular-react-native",
        "rudder-sdk-react-native",
        "rudder-sdk-react-native-monorepo",
        "example"
      ],
      "maxHeaderWidth": 120,
      "defaultScope": "@rudderstack/rudder-sdk-react-native-monorepo",
      "defaultType": "feat"
    }
  }
}
